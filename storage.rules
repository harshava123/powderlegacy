rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Products images - Public read, authenticated write
    match /products/{allPaths=**} {
      allow read: if true;  // Anyone can view product images
      allow write: if request.auth != null;  // Only authenticated users can upload/delete
    }
    
    // Home content images - Public read, authenticated write
    match /home/{allPaths=**} {
      allow read: if true;  // Anyone can view home images
      allow write: if request.auth != null;  // Only authenticated users can upload/delete
    }
    
    // Header images (logo, banners) - Public read, authenticated write
    match /header/{allPaths=**} {
      allow read: if true;  // Anyone can view header images
      allow write: if request.auth != null;  // Only authenticated users can upload/delete
    }
    
    // Deny all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

