rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // CMS Collection - Public read, authenticated write
    match /cms/{document} {
      allow read: if true;  // Anyone can read CMS content (products, home, header)
      allow write: if request.auth != null;  // Only logged-in users can edit CMS
    }
    
    // Orders - Public can create and read (for checkout flow)
    match /orders/{orderId} {
      allow create, read, update: if true;
      allow delete: if false; // Prevent deletion
    }
    
    // Contact Messages - Anyone can create, only authenticated can read
    match /contact_messages/{messageId} {
      allow create: if true;  // Anyone can submit contact form
      allow read: if request.auth != null;  // Only authenticated users can read
      allow update, delete: if false;
    }
    
    // User-specific data (requires authentication)
    match /users/{userId} {
      // User can read/write their own cart and favorites
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      match /meta/cart {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /carts/{cartId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /favorites/{favoriteId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

