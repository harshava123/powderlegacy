rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to create orders (for checkout)
    match /orders/{orderId} {
      allow create, read, update: if true;
      allow delete: if false; // Prevent deletion
    }
    
    // Allow anyone to create contact messages
    match /contact_messages/{messageId} {
      allow create: if true;
      allow read, update, delete: if false; // Only allow creation
    }
    
    // User-specific data (requires authentication)
    match /users/{userId} {
      // User can read/write their own cart and favorites
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      match /carts/{cartId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /favorites/{favoriteId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

